<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_records"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.akshayvermadtugmail.dtusmartattender.Edit_records">

    <EditText
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:inputType="phone"
        android:ems="10"
        android:layout_alignTop="@+id/textView47"
        android:id="@+id/editText6"
        android:layout_alignBottom="@+id/textView47"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:background="#bbdefb"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView47"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp" />

    <TextView
        android:text="Roll no. :-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView47"
        android:textSize="24sp"
        android:layout_marginTop="43dp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp" />

    <TextView
        android:text="New Status :-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:id="@+id/textView48"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:layout_below="@+id/textView47"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText6" />

    <Button
        android:text="Next"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/button19"
        android:background="#1e88e5"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:paddingTop="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/textView48"
        android:layout_alignParentStart="true"
        android:layout_marginRight="30dp" />

    <Button
        android:text="Done"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/button20"
        android:background="#1e88e5"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:paddingTop="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        android:layout_alignBaseline="@+id/button19"
        android:layout_alignBottom="@+id/button19"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp" />

    <Button
        android:text="Show current status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/button21"
        android:background="#1e88e5"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:paddingTop="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/textView47"
        android:layout_marginTop="30dp" />

    <Button
        android:text="P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button22"
        android:layout_alignBaseline="@+id/textView48"
        android:layout_alignBottom="@+id/textView48"
        android:layout_toStartOf="@+id/button23" />

    <Button
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button23"
        android:layout_alignBaseline="@+id/button22"
        android:layout_alignBottom="@+id/button22"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Tap again  to refresh the status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView49"
        android:textSize="18sp"
        android:layout_below="@+id/button21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
